{
  "name": "suroi",
  "version": "0.30.0",
  "description": "An open-source 2D battle royale game inspired by surviv.io.",
  "scripts": {
    "build:client": "cd client && bun build:client",
    "start": "cd server && bun .",
    "dev": "bun -F '*' dev",
    "dev:client": "cd client && bun dev",
    "dev:server": "cd server && bun dev",
    "dev:test": "cd tests && bun stressTest",
    "watch:server": "cd server && bunx --bun tsc --noEmit --watch",
    "updateConfigSchema": "cd server && bun updateConfigSchema",
    "lint": "bunx --bun biome lint --fix",
    "lint:check": "bunx --bun biome lint",
    "validateDefinitions": "cd tests && bun validateDefinitions",
    "validateSvgs": "cd tests && bun validateSvgs",
    "fullReinstall": "rm -r bun.lock node_modules server/node_modules && bun install",
    "fullReinstallWin": "del /f /s /q bun.lock node_modules\\* server\\node_modules\\* & bun install"
  },
  "keywords": [
    "bun",
    "typescript",
    "battle-royale",
    "io-game",
    "pixijs"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^22.18.13",
    "typescript": "^5.9.3"
  },
  "workspaces": ["client", "common", "server", "tests"],
  "trustedDependencies": [
    "@parcel/watcher",
    "@swc/core",
    "esbuild",
    "skia-canvas",
    "unrs-resolver"
  ]
}
